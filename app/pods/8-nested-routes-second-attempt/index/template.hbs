<div class="mt-8 -mx-2 flex flex-wrap">
  {{#each this.words as |word|}}
    <div class="w-1/3 px-2 mb-4">
      <AnimatedContainer>
        {{#animated-value
          word
          use=this.transition
          finalRemoval=this.appState.didRender
          initialInsertion=this.appState.didRender as |value|
        }}
          {{#link-to
            "8-nested-routes.word"
            word
            class="
              bg-blue text-white h-32 text-lg font-bold flex justify-center
              items-center shadow text-grey-darkest no-underline
            "
          }}
            <span>
              {{first-letter value}}
            </span>
          {{/link-to}}
        {{/animated-value}}
      </AnimatedContainer>
    </div>
  {{/each}}
</div>
